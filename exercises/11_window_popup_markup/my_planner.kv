#:import Factory kivy.factory.Factory

# Monday Popup
<MondayPopup@Popup>
    size_hint: 1, .85
    pos_hint: {'x': 0, 'top': 0.9}
    title: "- Monday's Tasks -"
    title_color: (207/255, 226/255, 243/255, 1)
    title_align: 'center'
    title_size: 18
    separator_height: 0
    background_normal: ''
    background_color: (61/255, 133/255, 198/255, 1)
    background: ''
    title_font: 'Comfortaa_Bold'

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            orientation: 'vertical'
            size: root.width, root.height
            spacing: 1

            ToggleButton:
                state: 'down'
                markup: True
                text: '[size=19][color=#C9DAF8][font=Comfortaa_Bold]Water plants[/font][/color][/size]'
                text_size: self.size
                padding_x: 30
                valign: 'center'
                background_color: (0, 0, 0, 0)
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, .5)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10]
                    Color:
                        rgba: (61/255, 133/255, 198/255, 1) if self.state == 'normal' else (159/255, 197/255, 232/255, 1)
                    RoundedRectangle:
                        size: self.width, self.height-1.5
                        pos: self.pos
                        pos: self.x, self.y+1

