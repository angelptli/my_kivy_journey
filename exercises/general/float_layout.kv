# File: float_layout.kv
# Desc: Position buttons in float layout.

<Button>
    font_size: 30
    size_hint: (0.3, 0.3)

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            # Options: {"x", "y", "top", "bottom", "left", "right"}
            pos_hint: {"x": 0, "top": 1}

        Button:
            text: "Top Right"
            pos_hint: {"x": 0.7, "top": 1}

        Button:
            text: "Center"
            pos_hint: {"x": 0.35, "y": 0.35}

        Button:
            text: "Bottom Left"
            pos_hint: {"x": 0}

        Button:
            text: "Bottom Right"
            pos_hint: {"x": 0.7, "bottom:": 1}
