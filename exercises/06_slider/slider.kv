<MyLayout>
    slide_text: slider_label
    BoxLayout:
        orientation: "vertical"
        # Spans to the entirety of the app
        size: root.width, root.height

        Label:
            id: slider_label
            text: "Slide the Slider!"
            font_size: 32

        Slider:
            min: 0
            max: 50
            # How far the slider moves with each movement
            step: 1
            # orientation: "horizontal"
            orientation: "vertical"
            # Pass in name of slider and number as you slide
            on_value: root.slide_it(*args)
