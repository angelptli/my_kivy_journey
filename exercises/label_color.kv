#:import utils kivy.utils

# File: label_color.kv
# Desc: Set background color of labels.

<Button>
    # Set default font size, default color, and desired color
    font_size: 32
    background_normal: ''
    background_color: utils.get_color_from_hex('#1677a8')  # blue

<TextInput>
    background_color: utils.get_color_from_hex('#afd0e0')

# # Can't use this if want to set custom label colors
# <Label>
#     font_size: 50

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45
            # Set label color. It must use RGBA numbers, not utils method.
            background_color: (44/255.0, 110/255.0, 220/255.0, 1)
            canvas.before:
                Color:
                    # self as in the root layout MyLayout
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            # Text Properties
            color: (0, 1, 0, 0.5)
            bold: True
            italic: True
            outline_color: (0, 0, 0)
            outline_width: 2

        TextInput:
            multiline: False

        Button:
            text: "Clear"
            # Change this button's color from blue to gray
            background_color: utils.get_color_from_hex('#94a7aF')
