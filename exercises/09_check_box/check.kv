<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding:50
        spacing: 50

        # Header and note about extra sausage topping
        GridLayout:
            cols: 1
            spacing: 10
            size_hint: 1, 0.4

            Label:
                text: 'Select Pizza Toppings'
                font_size: 32
                text_size: self.size
                halign: 'center'

            Label:
                text: 'Note: Pepperoni and Sausage each add an extra $1.00'
                font_size: 15
                size_hint: 1, 0.2

        # List of selectable toppings
        GridLayout:
            cols: 2
            spacing: 20

            Label:
                text: 'Cheese'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'Cheese')

            Label:
                text: 'Pepperoni'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'Pepperoni')

            Label:
                text: 'Sausage'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                on_active: root.checkbox_click(self, self.active, 'Sausage')

        # Selected toppings and total price
        GridLayout:
            cols: 2
            size_hint: (1, 0.2)
            spacing: 10

            Label:
                text: 'You Selected:'
                font_size: 20
                text_size: self.size
                padding_x: 100
                valign: 'center'

            Label:
                id: select_toppings
                text: ''
                font_size: 20
                text_size: self.size
                valign: 'center'

            Label:
                text: 'Total Price:'
                font_size: 20
                text_size: self.size
                padding_x: 100
                valign: 'center'

            Label:
                id: order_pricing
                text: '$10.00'
                font_size: 20
                text_size: self.size
                valign: 'center'
