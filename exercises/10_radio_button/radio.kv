<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding:50
        spacing: 50

        # Header and note about selection prices
        GridLayout:
            cols: 1
            spacing: 15
            size_hint: 1, 0.4

            Label:
                text: 'How Many Pineapple Pieces?'
                font_size: 32
                text_size: self.size
                halign: 'center'

            Label:
                text: '  5  pieces = $1.50\n10  pieces = $2.00'
                font_size: 15
                size_hint: 1, 0.2

        # List of pineapple deals
        GridLayout:
            cols: 2
            spacing: 20

            Label:
                text: '0    pieces'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                group: 'pizza_toppings'
                on_active: root.checkbox_click(self, self.active, '0 pieces')

            Label:
                text: '5    pieces'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                group: 'pizza_toppings'
                on_active: root.checkbox_click(self, self.active, '5 pieces')

            Label:
                text: '10  pieces'
                font_size: 25
                text_size: self.size
                padding_x: 100
                valign: 'center'

            CheckBox:
                group: 'pizza_toppings'
                on_active: root.checkbox_click(self, self.active, '10 pieces')

        # Selected option and total price
        GridLayout:
            cols: 2
            size_hint: (1, 0.2)
            spacing: 10

            Label:
                text: 'You Selected:'
                font_size: 20
                text_size: self.size
                padding_x: 100
                valign: 'center'

            Label:
                id: select_pieces
                text: ''
                font_size: 20
                text_size: self.size
                valign: 'center'

            Label:
                text: 'Total Price:'
                font_size: 20
                text_size: self.size
                padding_x: 100
                valign: 'center'

            Label:
                id: order_pricing
                text: '$10.00'
                font_size: 20
                text_size: self.size
                valign: 'center'
